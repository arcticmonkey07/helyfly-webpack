.header-middle
  background-image: url('/assets/img/header-top-bg.png')
  @media screen and (min-width: 1190px) and (max-width: 1550px)
    background-position: center
  @media screen and (max-width: $laptop)
    background-position: 64% 0
  @media screen and (max-width: $mobile-large)
    background-position: 61% 99%
  @media screen and (max-width: $mobile)
    background-image: url('/assets/img/mobile-top-bg.png')
    background-size: cover

.header-middle__text
  display: block
  width: 887px
  margin-bottom: 20px
  padding-top: 286px
  font-style: normal
  font-weight: bold
  font-size: 40px
  line-height: 49px
  color: #FFFFFF
  letter-spacing: 2.2px
  @media screen and (max-width: $tablet)
    width: 100%
  @media screen and (max-width: $mobile-large)
    width: 100%
    padding-top: 180px
    font-size: 35px
    line-height: 40px
  @media screen and (max-width: $mobile)
    width: 280px
    margin-bottom: 37px
    padding-top: 142px
    font-size: 32px
    line-height: 39px

.header-middle__text--color
  color: #FC9B09
  @media screen and (max-width: $mobile)
    letter-spacing: 1.6px

.header-middle__price
  position: relative
  width: 224px
  height: 85px
  margin-bottom: 23px
  background: #FC9B09
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.1)
  border-radius: 5px
  &:after
    content: ''
    position: absolute
    bottom: -6px
    left: 122px
    width: 20px
    height: 20px
    background-color: #FC9B09
    transform rotate(45deg)
    box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.1)
  @media screen and (max-width: $mobile)
    width: 200px
    height: 77px
    &:after
      bottom: -6px
      left: 110px

.header-middle__price-text
  display: block
  padding-top: 7px
  padding-left: 20px
  font-style: normal
  font-weight: normal
  font-size: 20px
  line-height: 30px
  color: #FFFFFF
  letter-spacing: 1.1px
  @media screen and (max-width: $mobile)
    padding-top: 5px
    padding-left: 18px
    font-size: 18px

.header-middle__price-amount
  padding-left: 23px
  font-weight: 800
  font-size: 35px
  line-height: 37px
  color: #FFFFFF
  @media screen and (max-width: $mobile)
    padding-left: 19px
    font-size: 30px

.header-middle__price-circle
  position: absolute
  top: 15px
  right: 31px
  display: inline-block
  width: 50px
  height: 50px
  border: 1px solid #FFFFFF
  border-radius: 50%
  box-shadow: 0 4px 4px rgba(255, 255, 255, 0.25), 0px 4px 15px rgba(255, 255, 255, 0.25)
  @media screen and (max-width: $mobile)
    right: 15px
    width: 45px
    height: 45px

.header-middle__price-percent
  position: absolute
  top: 29px
  right: 42px
  display: block
  width: 31px
  height: 36px
  background-image: url('/assets/img/percent.svg');
  background-repeat: no-repeat;
  @media screen and (max-width: $mobile)
    top: 26px
    right: 23px

.header-middle__button
  width: 304px
  height: 68px
  margin-bottom: 260px
  font-style: normal
  font-weight: 900
  font-size: 18px
  line-height: 22px
  text-align: center
  color: #FFFFFF
  background-color: transparent
  border: 3px solid #FFFFFF
  box-sizing: border-box
  box-shadow: 0 4px 4px rgba(255, 255, 255, 0.25), 0px 4px 70px rgba(255, 255, 255, 0.7)
  border-radius: 3px
  cursor: pointer
  &:hover
    background-color: #fff
    color: #000;
  @media screen and (max-width: $laptop)
    margin-bottom: 212px
  @media screen and (max-width: $tablet)
    margin-bottom: 212px
  @media screen and (max-width: $mobile-large)
    margin-bottom: 145px
  @media screen and (max-width: $mobile)
    width: 275px
    height: 68px
    margin-bottom: 155px
    font-size: 16px
    box-shadow none