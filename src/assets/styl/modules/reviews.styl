.reviews
  margin-bottom: 70px

.reviews__header
  position: relative;
  left: -111px;
  margin-top: 0
  margin-bottom: 59px
  font-style: normal
  font-weight: 500
  font-size: 22px
  line-height: 29px
  @media screen and (max-width: $mobile-large)
    left: 0
    margin-bottom: 40px
    font-size: 28px
    line-height: 40px
    text-align: center
  @media screen and (max-width: $mobile)
    position: static
    margin-bottom: 48px
    font-size: 30px
    line-height: 42px

.reviews__container
  position: relative
  width: 510px
  margin-bottom: 71px
  padding-left: 121px
  @media screen and (max-width: $mobile-large)
    width: 100%
    padding-left: 0
  &:after
    content: ''
    position: absolute
    bottom: -30px
    left: 118px
    width: 510px
    height: 1px
    background-color: #C7C7C7
    @media screen and (max-width: $mobile-large)
      left: 0
      bottom: -39px
      width: 385px
    @media screen and (max-width: $mobile)
      width: 290px
  &--mob
    @media screen and (max-width: $mobile-large)
      display: none

.reviews__img
  position: absolute
  top: -11px
  left: 0
  width: 101px
  height: 101px
  @media screen and (max-width: $mobile)
    top: -4px
    width: 84px
    height: 84px

.reviews__name
  margin-bottom: 9px
  font-weight: 500
  font-size: 20px
  line-height: 22px
  @media screen and (max-width: $mobile-large)
    margin-left: 123px
    font-size: 18px
    line-height: 18px
  @media screen and (max-width: $mobile)
    margin-left: 103px

.reviews__position
  display: block
  margin-bottom: 8px
  font-weight: normal
  font-size: 16px
  line-height: 21px
  @media screen and (max-width: $mobile-large)
    margin-left: 123px
  @media screen and (max-width: $mobile)
    margin-left: 103px

.reviews__stars-container
  margin-top: 3px
  margin-bottom: 15px
  @media screen and (max-width: $mobile-large)
    margin-left: 123px
    margin-bottom: 25px
  @media screen and (max-width: $mobile)
    margin-left: 103px
    margin-top: -5px

.reviews__text
  position: relative
  display: inline-block
  margin-left: 61px
  font-weight: normal
  font-size: 15px
  line-height: 21px
  color: #B3B3B3
  letter-spacing: 0.3px
  @media screen and (max-width: $mobile-large)
    display: block
    margin-left: 21px
    margin-bottom: 12px
  &:before
    content: ''
    position: absolute
    top: 0
    left: -22px
    width: 17px
    height: 15px
    background-image: url('/assets/img/reviws-yes.svg');

.reviews__description
  margin: 0
  margin-bottom: 15px;
  font-weight: normal
  font-size: 18px
  line-height: 24px
  @media screen and (max-width: $mobile)
    margin-bottom: 37px
    font-size: 16px
    line-height: 22px

.reviews__description--mob
  @media screen and (max-width: $mobile)
    margin-bottom: 17px

.reviews__date
  display: block
  font-weight: normal;
  font-size: 15px
  line-height: 21px
  color: #B3B3B3

.reviews__show-all-button
  position: relative
  display: block
  margin: 0 auto
  font-weight: 500
  font-size: 19px
  line-height: 25px
  color: #5286EC
  border: none
  text-align: center
  background-color: transparent
  cursor: pointer
  @media screen and (max-width: $mobile)
    margin-top: 76px
    left: -7px
  &:before
    content: ''
    position: absolute
    top: 12px
    left: -15px
    width: 11px
    height: 6px
    background-image: url('/assets/img/arrow.svg');
    @media screen and (max-width: $mobile)
      width: 0
  &:after
    content: ''
    position: absolute
    top: 12px
    right: -13px
    width: 11px
    height: 6px
    background-image: url('/assets/img/arrow.svg');
    @media screen and (max-width: $mobile)
      top: 10px
      right: -10px
      transform rotate(-90deg)
  &:hover
    text-decoration: underline